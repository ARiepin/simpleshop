%body
  %header.navbar.navbar-default.navbar-fixed-top.navbar-inverse{ role: 'navigation' }
    .container
      .navbar-brand
        = link_to 'SimpleShop', root_path
      %p.navbar-text
        = "Welcome, #{current_user.email}" if current_user
      .nav
        %ul.nav.nav-pills.navbar-right
          %li= link_to 'Cart', cart_index_path, class: 'nav-item'
          - unless current_user
            %li= link_to 'Register', new_user_registration_path
            %li= link_to 'Sign in', new_user_session_path
          - if current_user && current_user.admin?
            %li= link_to 'Users', users_path
          %li= link_to 'Exit', destroy_user_session_path, method: :delete if current_user
